<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crud Node JS - MySQL</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        th {
            background-color: #091057;
            color: white;
        }
    </style>
</head>
<body>
    <h1>Daftar User/Pengguna</h1>
    <table>
        <tr>
            <th>ID</th>
            <th>Nama</th>
            <th>Email</th>
            <th>Telepon</th>
            <th>Aksi</th>
        </tr>
        <% users.forEach(pengguna => { %>
            <tr>
                <td><%= pengguna.id %></td>
                <td><%= pengguna.nama %></td>
                <td><%= pengguna.email %></td>
                <td><%= pengguna.phone %></td>
                <td>
                    <a href="/edit/<%= pengguna.id %>">Edit</a>
                    <a href="/delete/<%= pengguna.id %>" onclick="return confirmDelete()">Hapus</a>
                </td>
            </tr>
        <% }) %>        
    </table>

    <style>
        #form-tambah {
            width: 100%;
            border-collapse: collapse;
        }

        #form-tambah td {
            padding: 8px;
        }

        #form-tambah tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #form-tambah tr:hover {
            background-color: #ddd;
        }

        #form-tambah th {
            padding: 8px;
            text-align: left;
            background-color: #091057;
            color: white;
        }
    </style>

    <h2>Tambah Pengguna Baru</h2>
    <form id="form-tambah" action="/add" method="post">
        <table>
            <tr>
                <td><label for="nama">Nama:</label></td>
                <td><input type="text" id="nama" name="nama" required></td>
            </tr>
            <tr>
                <td><label for="email">Email:</label></td>
                <td><input type="email" name="email" id="email"></td>
            </tr>
            <tr>
                <td><label for="phone">Telepon:</label></td>
                <td><input type="text" name="phone" id="phone"></td>
            </tr>
            <tr>
                <td></td>
                <td><button type="submit" onclick="return confirmAdd()">Tambah</button></td>
            </tr>
        </table>
    </form>

    
</body>
<script>
    function confirmDelete() {
        if (confirm('Apakah Anda yakin ingin menghapus data ini?')) {
        } else {
            alert('Data batal di hapus');
            return false;
        }
    }
    function confirmAdd (){
        return confirm('Data berhasil di Tambahkan');
    }
</script>
</html>

